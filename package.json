{
  "name": "@jsweb/utils",
  "version": "0.0.16",
  "type": "module",
  "description": "JS lib with useful stuff for web development",
  "scripts": {
    "test": "jest",
    "dev": "jest --watch",
    "upd8": "rm -rf node_modules && pnpm i",
    "g:push": "git push && git push --tags",
    "v:patch": "npm version patch && npm run g:push",
    "v:minor": "npm version minor && npm run g:push",
    "v:major": "npm version major && npm run g:push",
    "build:dev": "rm -rf lib modules web && tsc",
    "build:publish": "tsc -p tsconfig.build.json",
    "prepublishOnly": "npm run build:publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsweb/utils.git"
  },
  "keywords": [
    "JS",
    "TS",
    "Web",
    "utilities"
  ],
  "author": "Alex Bruno CÃ¡ceres <contato@alexbruno.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jsweb/utils/issues"
  },
  "homepage": "https://github.com/jsweb/utils#readme",
  "devDependencies": {
    "@jsweb/params": "latest",
    "@types/jest": "latest",
    "@types/node": "latest",
    "jest": "latest",
    "jest-environment-jsdom": "latest",
    "ts-jest": "latest",
    "ts-node": "latest",
    "typescript": "latest"
  }
}
